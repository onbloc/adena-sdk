{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(ts|tsx)$": "ts-jest"
  },
  "testMatch": ["<rootDir>/**/*.test.(ts|tsx)"],
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "moduleDirectories": ["node_modules", "<rootDir>/packages"],
  "modulePathIgnorePatterns": ["bin", "node_modules", "coverage", "__mocks__"]
}
